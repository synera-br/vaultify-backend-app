#   _, err := rand.Read(key)
#   if err != nil { panic(err) }
#   encodedKey := base64.StdEncoding.EncodeToString(key)
#   fmt.Println(encodedKey)
ENCRYPTION_KEY=your_base64_encoded_32_byte_aes_key_here

